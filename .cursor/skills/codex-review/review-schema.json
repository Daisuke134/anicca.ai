{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodexReviewResult",
  "description": "Structured output from Codex code/spec review",
  "type": "object",
  "required": ["ok", "blocking", "advisory", "summary"],
  "properties": {
    "ok": {
      "type": "boolean",
      "description": "true if no blocking issues found, false otherwise"
    },
    "blocking": {
      "type": "array",
      "description": "Issues that MUST be fixed before proceeding",
      "items": {
        "type": "object",
        "required": ["file", "severity", "issue", "suggestion"],
        "properties": {
          "file": {
            "type": "string",
            "description": "Path to the file with the issue"
          },
          "line": {
            "type": "integer",
            "description": "Line number where the issue occurs (optional)"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high"],
            "description": "Issue severity level"
          },
          "issue": {
            "type": "string",
            "description": "Clear description of the problem"
          },
          "suggestion": {
            "type": "string",
            "description": "How to fix the issue"
          },
          "category": {
            "type": "string",
            "enum": ["security", "logic", "completeness", "compatibility", "performance"],
            "description": "Category of the issue"
          }
        }
      }
    },
    "advisory": {
      "type": "array",
      "description": "Suggestions that would improve quality but are not blocking",
      "items": {
        "type": "object",
        "required": ["file", "severity", "issue", "suggestion"],
        "properties": {
          "file": {
            "type": "string",
            "description": "Path to the file with the suggestion"
          },
          "line": {
            "type": "integer",
            "description": "Line number (optional)"
          },
          "severity": {
            "type": "string",
            "enum": ["medium", "low"],
            "description": "Suggestion priority"
          },
          "issue": {
            "type": "string",
            "description": "Description of what could be improved"
          },
          "suggestion": {
            "type": "string",
            "description": "How to improve it"
          },
          "category": {
            "type": "string",
            "enum": ["style", "readability", "optimization", "best-practice", "documentation"],
            "description": "Category of the suggestion"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the review findings"
    },
    "reviewType": {
      "type": "string",
      "enum": ["spec", "code", "architecture", "security"],
      "description": "Type of review performed"
    },
    "filesReviewed": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of files that were reviewed"
    },
    "iteration": {
      "type": "integer",
      "description": "Current iteration number in the review cycle"
    }
  }
}
