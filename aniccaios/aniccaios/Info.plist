<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 必須（Archiveを iOS Apps と認識させる基本識別子） -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundleDisplayName</key>
    <string>Anicca</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>
    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- iOS判定キー（Archive時にiOS Appsとして認識させる） -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- 既存ビルド設定で付与していたものを明示移行 -->
    <key>CFBundleLocalizations</key>
    <array>
        <string>ja</string>
        <string>en</string>
    </array>
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.healthcare-fitness</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>Anicca needs the microphone to talk with you in real time.</string>
    <key>NSCameraUsageDescription</key>
    <string>Anicca needs the camera for video calls and visual communication.</string>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- 既存キーの維持 -->
    <key>ANICCA_PROXY_BASE_URL</key>
    <string>$(INFOPLIST_KEY_ANICCA_PROXY_BASE_URL)</string>
    <key>REVENUECAT_API_KEY</key>
    <string>$(INFOPLIST_KEY_REVENUECAT_API_KEY)</string>
    <key>REVENUECAT_ENTITLEMENT_ID</key>
    <string>$(INFOPLIST_KEY_REVENUECAT_ENTITLEMENT_ID)</string>
    <key>REVENUECAT_PAYWALL_ID</key>
    <string>$(INFOPLIST_KEY_REVENUECAT_PAYWALL_ID)</string>
    <key>REVENUECAT_CUSTOMER_CENTER_ID</key>
    <string>$(INFOPLIST_KEY_REVENUECAT_CUSTOMER_CENTER_ID)</string>
    <key>NSUserNotificationsUsageDescription</key>
    <string>起床やルーティン開始のために通知を使います。</string>
    <key>UIApplicationSceneManifest</key>
    <dict/>
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>voip</string>
        <string>remote-notification</string>
    </array>
    <key>UILaunchScreen</key>
    <dict/>
</dict>
</plist>
