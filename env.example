# Google Cloud Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
PROJECT_ID=your_google_cloud_project_id
LOCATION=us-central1

# Server Configuration
PORT=3000
NODE_ENV=development

# Screen Capture Settings
CAPTURE_INTERVAL_MS=1000
MAX_CONTEXT_HISTORY=50

# Audio Settings
DEFAULT_VOICE=en-US-Neural2-D
DEFAULT_LANGUAGE=en-US
SPEECH_SPEED=1.0
SPEECH_PITCH=0.0

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Database Configuration
# Set to true for local SQLite database (recommended)
# Set to false to use Supabase (legacy - not recommended for new installations)
USE_SQLITE=true

# Legacy Supabase Configuration (Optional - only needed if USE_SQLITE=false)
# SUPABASE_URL=your_supabase_url_here
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here 