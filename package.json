{
  "name": "anicca-agi",
  "version": "4.1.0",
  "description": "anicca - AI Screen Narrator Desktop App",
  "main": "dist/main.js",
  "homepage": "https://anicca.ai",
  "scripts": {
    "preelectron": "npm run build",
    "electron": "electron .",
    "preelectron-dev": "npm run build",
    "electron-dev": "NODE_ENV=development electron .",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc && cp src/ui/*.html dist/ui/ && cp src/ui/*.js dist/ui/",
    "clean": "rm -rf dist/",
    "clean-build": "npm run clean && npm run build",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "release": "npm run build && electron-builder --publish=never",
    "exa-mcp-server": "ts-node src/services/startExaRemoteMcp.ts"
  },
  "keywords": [
    "ai",
    "screen-analysis",
    "desktop-app",
    "gemini",
    "real-time",
    "typescript",
    "electron",
    "sqlite"
  ],
  "author": {
    "name": "anicca",
    "email": "contact@anicca.ai"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.24",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/sqlite3": "^5.1.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.9.0",
    "dotenv": "^16.4.1",
    "exa-js": "^1.8.8",
    "jimp": "^0.22.10",
    "mcp-remote": "^0.1.14",
    "python-shell": "^5.0.0",
    "screenshot-desktop": "^1.12.7",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/screenshot-desktop": "^1.12.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "electron": "^36.3.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
