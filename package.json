{
  "name": "anicca-agi",
  "version": "1.0.0",
  "description": "anicca - AI Screen Narrator Desktop App",
  "main": "dist/main.js",
  "homepage": "https://anicca.ai",
  "scripts": {
    "electron": "npm run build && electron .",
    "electron-dev": "npm run build && NODE_ENV=development electron .",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc && cp src/ui/*.html dist/ui/ && cp src/ui/*.js dist/ui/",
    "build:env": "npm run build && echo 'USE_SQLITE=true' > dist/.env && echo 'GOOGLE_API_KEY='$GOOGLE_API_KEY >> dist/.env",
    "dist": "npm run build:env && electron-builder",
    "dist:mac": "npm run build:env && electron-builder --mac",
    "dist:all": "npm run build:env && electron-builder --mac --win --linux",
    "release": "npm run build:env && electron-builder --publish=never"
  },
  "keywords": [
    "ai",
    "screen-analysis",
    "desktop-app",
    "gemini",
    "real-time",
    "typescript",
    "electron",
    "sqlite"
  ],
  "author": {
    "name": "anicca",
    "email": "contact@anicca.ai"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/vertexai": "^1.7.0",
    "@google/genai": "^1.0.1",
    "@google/generative-ai": "^0.24.1",
    "@types/sqlite3": "^5.1.0",
    "dotenv": "^16.4.1",
    "jimp": "^0.22.10",
    "screenshot-desktop": "^1.12.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/screenshot-desktop": "^1.12.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "electron": "^36.3.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "ai.anicca.app",
    "productName": "anicca",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "anicca AI Screen Narrator",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 420,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
