{
  "name": "anicca-agi",
  "version": "0.6.3-beta.7",
  "description": "anicca - AI Screen Narrator Desktop App",
  "main": "dist/main-voice-simple.js",
  "homepage": "https://anicca.ai",
  "scripts": {
    "preelectron": "npm run build",
    "electron": "electron .",
    "preelectron-dev": "npm run build",
    "electron-dev": "NODE_ENV=development electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:agents": "vitest src/agents/__tests__ --run",
    "test:agents:watch": "vitest src/agents/__tests__",
    "test:agents:coverage": "vitest src/agents/__tests__ --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc && cp src/ui/*.html dist/ui/ && cp src/ui/*.js dist/ui/",
    "build:voice": "tsc -p tsconfig.voice.json && cp src/recorder.html dist/",
    "clean": "rm -rf dist/",
    "clean-build": "npm run clean && npm run build",
    "voice:simple": "npm run build:voice && NODE_ENV=development DESKTOP_MODE=true electron dist/main-voice-simple.js",
    "dist:dev": "hdiutil detach /Volumes/Anicca* -force 2>/dev/null || true && NODE_ENV=development CSC_IDENTITY_AUTO_DISCOVERY=false npm run build:voice && electron-builder --mac --config electron-builder-voice.yml",
    "build:staging": "NODE_ENV=development npm run build:voice",
    "build:production": "NODE_ENV=production npm run build:voice",
    "dist:staging": "NODE_ENV=development npm run build:voice && dotenv -- electron-builder --mac --config electron-builder-voice.yml",
    "dist:production": "NODE_ENV=production npm run build:voice && dotenv -- electron-builder --mac --config electron-builder-voice.yml",
    "release": "npm run build && electron-builder --publish=never",
    "exa-mcp-server": "ts-node src/services/startExaRemoteMcp.ts",
    "postinstall": "node scripts/fix-claude-cli.js"
  },
  "keywords": [
    "ai",
    "screen-analysis",
    "desktop-app",
    "gemini",
    "real-time",
    "typescript",
    "electron",
    "sqlite"
  ],
  "author": {
    "name": "anicca",
    "email": "contact@anicca.ai"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.24",
    "@composio/core": "^0.1.45",
    "@google-cloud/text-to-speech": "^6.1.0",
    "@modelcontextprotocol/server-filesystem": "*",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@openai/agents": "^0.0.16",
    "@openai/agents-realtime": "^0.0.16",
    "@ricky0123/vad-web": "^0.0.24",
    "@slack/web-api": "^7.9.3",
    "@supabase/supabase-js": "^2.52.0",
    "@t09tanaka/mcp-simple-voicevox": "^0.1.0",
    "@types/express": "^5.0.3",
    "@types/sqlite3": "^5.1.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "mcp-remote": "^0.1.14",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "screenshot-desktop": "^1.12.7",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.11",
    "@types/screenshot-desktop": "^1.12.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^9.0.0",
    "electron": "^36.3.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
